# First, configure linux kernel (config_example can be used)

# Compile
make ARCH=arm64 CROSS_COMPILE=aarch64-linux-gnu- modules Image dtbs

# To make initrd export modules
make ARCH=arm64 CROSS_COMPILE=aarch64-linux-gnu- modules_install INSTALL_MOD_PATH=./modules

# Compress directory by any means and move it to target machine (lib/modules), then make initrd
sudo mkinitramfs -o /boot/initrd.img-6.1.75 6.1.75

# Convert to uInitrd acceptable by uboot
mkimage -A arm -T ramdisk -C none -n 'Initrd' -d initrd.img-6.1.75 uInitrd-6.1.75
